<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <sample.views.CustomCanvasView
        android:id="@+id/customCanvasView"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnSaveBitmap"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"  />

    <Button
        android:id="@+id/btnSaveBitmap"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="@string/save_bitmap"
        app:layout_constraintTop_toBottomOf="@id/customCanvasView"
       />

</androidx.constraintlayout.widget.ConstraintLayout>