<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="sample">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_sharedapp"
        android:roundIcon="@mipmap/ic_launcher_sharedapp_round"
        android:label="@string/app_name"
        android:supportsRtl="false"
        android:theme="@style/AppTheme"
        android:networkSecurityConfig="@xml/network_security_config">

        <service android:name=".services.CollectLocationService"/>

        <activity android:name="sample.activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="sample.activities.SecondActivity"></activity>
        <activity android:name="sample.activities.HobbiesActivity"></activity>
        <activity android:name="sample.activities.LocationActivity" ></activity>
        <activity android:name="sample.activities.UserActivity" ></activity>
        <activity android:name="sample.activities.DayPlanActivity"></activity>
        <activity android:name="sample.activities.OpenGLActivity" />
    </application>

</manifest>